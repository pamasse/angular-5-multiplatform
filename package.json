{
  "name": "zonemaster-gui",
  "version": "0.0.1",
  "license": "MIT",
  "main": "electron/electron-app.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "serve:webextension": "ng serve --app 2",
    "build:web": "ng build --app 0",
    "build:webextension": "rimraf ./dist-webextension && ng build --app 2 --aot --prod --sourcemap=false --output-hashing=none && web-ext build --source-dir=dist-webextension --artifacts-dir=.",
    "build:wordpress:plugin": "",
    "build-electron": "rimraf ./dist-electron && ng build --app 1 -e electron --base-href ./ && npm run electron-ntsc && cross-os cp-package",
    "electron-ntsc": "ntsc src/environments/environment.electron.ts --outDir dist-electron/environments",
    "electron": "npm run build-electron && electron dist-electron",
    "build:desktop:win": "rimraf ./release-builds/zonemaster-win32-x64 && electron-packager dist-electron zonemaster --overwrite --platform=win32 --arch=x64 --prune=true --out=release-builds",
    "build:desktop:linux": "electron-packager dist-electron zonemaster --overwrite --platform=linux --arch=x64 --prune=true --out=release-builds",
    "build:desktop:mac": "electron-packager dist-electron zonemaster --overwrite --platform=darwin --arch=x64 --prune=true --out=release-builds"
  },
  "cross-os": {
    "cp-package": {
      "darwin": "cp package.json dist-electron",
      "win32": "copy package.json dist-electron",
      "linux": "cp package.json dist-electron"
    }
  },
  "private": false,
  "dependencies": {
    "@angular-devkit/core": "0.0.28",
    "@angular-devkit/schematics": "0.0.51",
    "@angular/animations": "^5.2.1",
    "@angular/common": "^5.2.1",
    "@angular/compiler": "^5.2.1",
    "@angular/core": "^5.2.1",
    "@angular/forms": "^5.2.1",
    "@angular/http": "^5.2.1",
    "@angular/platform-browser": "^5.2.1",
    "@angular/platform-browser-dynamic": "^5.2.1",
    "@angular/router": "^5.2.1",
    "@ng-bootstrap/ng-bootstrap": "^1.0.0-beta.5",
    "@ngx-translate/core": "^9.1.1",
    "@ngx-translate/http-loader": "^2.0.0",
    "angular2-markdown": "^2.2.2",
    "bootstrap": "^4.0.0-beta.2",
    "core-js": "^2.4.1",
    "file-saver": "^1.3.3",
    "font-awesome": "^4.7.0",
    "github-fork-ribbon-css": "^0.2.1",
    "rxjs": "^5.5.2",
    "zone.js": "^0.8.14"
  },
  "devDependencies": {
    "@angular/compiler-cli": "^5.2.1",
    "@angular/language-service": "^5.2.1",
    "@types/file-saver": "^1.3.0",
    "@types/jasmine": "^2.6.2",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "^9.3.0",
    "codelyzer": "^4.1.0",
    "cross-os": "^1.2.2",
    "david": "^11.0.0",
    "electron": "^1.7.9",
    "electron-connect": "^0.6.2",
    "electron-packager": "^10.1.1",
    "electron-reload": "^1.2.2",
    "jasmine-core": "^2.8.0",
    "jasmine-spec-reporter": "^4.2.1",
    "karma": "^2.0.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "ntypescript": "^1.201706190042.1",
    "protractor": "^5.2.0",
    "protractor-image-comparison": "^1.3.0",
    "ts-node": "^4.1.0",
    "tslint": "^5.8.0",
    "typescript": "^2.5.3",
    "web-ext": "^2.3.1",
    "web-ext-types": "^2.0.1"
  }
}
