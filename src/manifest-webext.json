{
  "manifest_version": 2,
  "name": "Zonemaster WebExt",
  "version": "0.1",
  "description": "Zonemaster web-extension",
  "icons": {},

  "applications": {
    "gecko": {
      "id": "addon@example.com",
      "strict_min_version": "42.0"
    }
  },

  "browser_action": {
    "default_title": "Zonemaster",
    "default_icon": {
      "32": "/assets/favicon/favicon-32x32.png",
      "64": "/assets/favicon/favicon-64x64.png"
    },
    "default_popup": "/index.html"
  },
  "page_action": {
    "default_icon": {
      "16": "/assets/favicon/favicon-16x16.png",
      "32": "/assets/favicon/favicon-32x32.png"
    },
    "default_title": "Zonemaster",
    "default_popup": "/index.html?page=pageAction"
  },

  "background": {
    "page": "/index.html?page=background"
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'; connect-src 'self' 'unsafe-inline' http://localhost:4201",
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}
